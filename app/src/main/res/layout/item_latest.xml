<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_gravity="center|top">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_latest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        app:cardElevation="0dp">

    <ImageView
        android:id="@+id/image_latest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_image"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView_name_latest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@id/cardView_latest"
        android:layout_alignRight="@id/cardView_latest"
        android:layout_alignLeft="@id/cardView_latest"
        style="@style/TextAppearance.AppCompat.Menu"
        android:gravity="center"
        android:text="TextView" />

</RelativeLayout>