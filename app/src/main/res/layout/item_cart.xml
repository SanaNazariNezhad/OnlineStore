<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cartViewModel"
            type="org.maktab.onlinestore.viewmodel.CartViewModel" />

        <variable
            name="productId"
            type="Integer" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/recycler_layout"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:onClick="@{() -> cartViewModel.onClickListItem(productId)}">


        <ImageView
            android:id="@+id/image_cart_product"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_image" />

        <TextView
            android:id="@+id/text_cart_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/image_cart_product"
            android:layout_alignTop="@+id/image_cart_product"
            android:layout_alignBottom="@+id/image_cart_product"
            android:layout_toRightOf="@id/text_cart_product_price"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Body1"
            tools:text="name of Product" />

        <TextView
            android:id="@+id/text_cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_cart_product_name"
            android:layout_alignBottom="@+id/text_cart_product_name"
            android:layout_alignParentStart="true"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Medium"
            tools:text="price" />
    </RelativeLayout>
</layout>