<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".view.fragment.ProductDetailFragment">

        <ScrollView
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="24dp"
            android:layout_above="@id/image_view_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_product_detail"
                    android:layout_width="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_height="150dp" />

                <TextView
                    android:id="@+id/text_product_name"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:background="@drawable/recycler_layout_detail_title"
                    style="@style/TextAppearance.AppCompat.Title" />

                <TextView
                    android:padding="8dp"
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold|italic"
                    android:text="@string/product_features" />

                <TextView
                    android:id="@+id/textView_product_detail"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:background="@drawable/recycler_layout_detail"
                    android:padding="16dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>

        <ImageButton
            android:id="@+id/image_view_cart"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/cart_button_layout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_add_shopping"/>
        <TextView
            android:id="@+id/text_view_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@id/image_view_cart"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            style="@style/TextAppearance.AppCompat.Title"/>

    </RelativeLayout>
</layout>