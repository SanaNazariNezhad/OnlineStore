<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.maktab.onlinestore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineStore">
        <activity android:name=".SubCategoriesActivity"></activity>
        <activity android:name=".controller.activity.ProductDetailActivity" />
        <activity
            android:name=".controller.activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.OnlineStore.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>